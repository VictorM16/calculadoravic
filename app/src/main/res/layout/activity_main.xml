<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:bakcground="#232223"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@id/screen"
        android:layout_width="390dp"
        android:layout_height="117dp"
        android:layout_gravity="center|right"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:background="#96F8CD"
        android:padding="10dp"
        android:textColor="#141716"
        android:textStyle="bold"
        android:textsize="30sp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="156dp">

        <Button
            android:id="@+id/ac"
            android:layout_width="98dp"
            android:layout_height="112dp"
            android:layout_margin="5dp"
            android:layout_weight="14dp"
            android:TextSize="30dp"
            android:text="AC"
            android:textColor="#141716"
            android:textStyle="bold" />

        <Button
            android:id="@+id/point"
            android:layout_width="69dp"
            android:layout_height="590dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:TextSize="30dp"
            android:text="."
            android:textColor="#141617"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/div"
        android:layout_width="93dp"
        android:layout_height="109dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="/"
        android:textColor="#141716"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <Button
        android:id="@+id/back"
        android:layout_width="106dp"
        android:layout_height="105dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="x"
        android:textColor="#141716"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/div"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <Button
        android:id="@+id/power"
        android:layout_width="87dp"
        android:layout_height="109dp"
        android:layout_margin="5dp"
        android:layout_weight="95dp"
        android:TextSize="30dp"
        android:text="^"
        android:textColor="#141716"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="406dp"
        android:layout_height="95dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="286dp">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="181dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:TextSize="30dp"
            android:text="7"
            android:textColor="#141716"
            android:textStyle="bold" />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:TextSize="30dp"
            android:text="2"
            android:textColor="#141716"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/nine"
        android:layout_width="105dp"
        android:layout_height="87dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="9"
        android:textColor="#141716"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/mul"
        app:layout_constraintStart_toEndOf="@+id/eight"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/mul"
        android:layout_width="91dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="*"
        android:textColor="#141716"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/eight"
        android:layout_width="93dp"
        android:layout_height="84dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="8"
        android:textColor="#141716"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="99dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="404dp"
        android:layout_height="97dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="386dp">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:TextSize="30dp"
            android:text="4"
            android:textColor="#141716"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/five"
        android:layout_width="109dp"
        android:layout_height="88dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="5"
        android:textColor="#141716"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="102dp" />

    /

    <Button
        android:id="@+id/six"
        android:layout_width="95dp"
        android:layout_height="88dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="6"
        android:textColor="#141617"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/min"
        android:layout_width="82dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="-"
        android:textColor="#141716"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toEndOf="@+id/for"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="404dp"
        android:layout_height="116dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="476dp">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:TextSize="30dp"
            android:text="1"
            android:textColor="#141617"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/two"
        android:layout_width="108dp"
        android:layout_height="105dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="2"
        android:textColor="#141716"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="99dp" />

    <Button
        android:id="@+id/three"
        android:layout_width="91dp"
        android:layout_height="97dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="3"
        android:textColor="#141617"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/plus"
        android:layout_width="92dp"
        android:layout_height="98dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="+"
        android:textColor="#141617"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toEndOf="@+id/three"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="400dp"
        android:layout_height="112dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="603dp">

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:TextSize="30dp"
            android:text="0"
            android:textColor="#141716"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/point"
        android:layout_width="96dp"
        android:layout_height="105dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="."
        android:textColor="#141617"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/equal"
        app:layout_constraintTop_toTopOf="@+id/linearLayout5" />

    <Button
        android:id="@+id/equal"
        android:layout_width="99dp"
        android:layout_height="103dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="="
        android:textColor="#141617"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintTop_toTopOf="@+id/linearLayout5" />

    <Button
        android:id="@+id/ans"
        android:layout_width="100dp"
        android:layout_height="103dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:TextSize="30dp"
        android:text="ANS"
        android:textColor="#141617"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/point"
        app:layout_constraintTop_toTopOf="@+id/linearLayout5" />


</androidx.constraintlayout.widget.ConstraintLayout>